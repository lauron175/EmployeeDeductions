@model IEnumerable<EmployeeDeductions.Web.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BenefitCost)
        </th>
        <th>
            Depedents Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BenefitCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dependents.Count)
        </td>
        <td>
            @Html.ActionLink("Add Dependent", "AddDependent", new { EmployeeId = item.EmployeeId })           
        </td>
        @*<td>
            @Html.ActionLink("Calculate Benefit Costs", "CalculateBenefitsCost", new { EmployeeId = item.EmployeeId })
        </td>*@
        <td>
            <div id="btnCalculateBenefitsCost" class="btn btn-primary">Calculate Benefits Cost</div>
        </td>
            @Html.HiddenFor(modelItem => item.EmployeeId)
    </tr>
}    
</table>
